<h1>Customers</h1>
<p>
    <table>
      <tr>
        <th>Name</th>
        <th>Actions</th>

      </tr>
     
      <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to customer.name, customer %></td>
          <td><%= link_to 'Del', customer_path(customer), method: :delete, data: {confirm: 'Are you sure?'} %> | 
            <%= link_to 'Edit', edit_customer_path(customer) %></td>
        </tr>
      <% end %>
    </table>
    <% if @customers.count == 0 %>
        No customers!
    <% end %>
</p>
<p>
    <%= link_to 'New customer', new_customer_path %>
</p>

