<h1>New Customer</h1>

<%= form_for :customer, url: customers_path do |f| %>

    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %><br>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>
<%= link_to 'Back', customers_path %>
