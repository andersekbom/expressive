<h1>Consultants</h1>

<p>
    <table>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        <% @consultants.each do |consultant| %>
            <tr>
                <td>
                    <%= link_to consultant.firstname + " " + consultant.lastname, consultant %>
                </td>
                <td>
                    <%= link_to 'Del', consultant_path(consultant), method: :delete, data: {confirm: 'Are you sure?'} %> | 
                    <%= link_to 'Edit', edit_consultant_path(consultant) %>
                </td>
            </tr>
        <% end %>
    </table>
    <% if @consultants.count == 0 %>
        No consultants!
    <% end %>
</p>

<p>
    <%= link_to 'New consultant', new_consultant_path %>
</p>

